# Environment Configuration Template
# Copy this file to .env.local and fill in your values

# ========================================
# Backend API Configuration
# ========================================

# API Target: 'local' for localhost:3000, 'aptible' for production backend
# In production builds, this is ignored - always uses Aptible endpoints
NEXT_PUBLIC_API_TARGET=local

# Local backend (Rails on localhost:3000)
NEXT_PUBLIC_GRAPHQL_ENDPOINT_LOCAL=http://localhost:3000/graphql
NEXT_PUBLIC_WS_ENDPOINT_LOCAL=ws://localhost:3000/cable

# Aptible production backend
NEXT_PUBLIC_GRAPHQL_ENDPOINT_APTIBLE=https://app-98507.on-aptible.com/graphql
NEXT_PUBLIC_WS_ENDPOINT_APTIBLE=wss://app-98507.on-aptible.com/cable

# ========================================
# Public URL Configuration
# ========================================

# Public-facing URL for shareable links (e.g., session resume URLs)
# In production, set this to your actual domain
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# AWS Deployment (for deploy scripts)
# ========================================

# CloudFront distribution IDs (get from AWS Console after setup)
# CLOUDFRONT_STAGING_DISTRIBUTION_ID=EXXXXXXXXXX
# CLOUDFRONT_PROD_DISTRIBUTION_ID=EXXXXXXXXXX

# AWS Region (defaults to us-east-1)
# AWS_REGION=us-east-1
