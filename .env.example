# Environment Configuration Template
# Copy this file to .env.local and fill in your values

# GraphQL API endpoint for Apollo Client
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:3001/graphql

# WebSocket endpoint for GraphQL subscriptions
NEXT_PUBLIC_WS_ENDPOINT=ws://localhost:3001/cable

# ========================================
# AWS Deployment (for deploy scripts)
# ========================================

# CloudFront distribution IDs (get from AWS Console after setup)
# CLOUDFRONT_STAGING_DISTRIBUTION_ID=EXXXXXXXXXX
# CLOUDFRONT_PROD_DISTRIBUTION_ID=EXXXXXXXXXX

# AWS Region (defaults to us-east-1)
# AWS_REGION=us-east-1
